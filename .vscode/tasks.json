{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "--std",
                "c++17",
                "-fdiagnostics-color=always",
                "-I${workspaceFolder}/views",
                "-g",
                "${fileDirname}/*.cpp",
                "${fileDirname}/views/src/*.cpp",
                //"${fileDirname}\\**.hpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lredis++",
                "-lhiredis",
                "-lhiredis",
                "-lpthread"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}